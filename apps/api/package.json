{
  "name": "@neon/api",
  "version": "0.1.0",
  "private": true,
  "description": "NEON API Server",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate --schema=../packages/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=../packages/database/prisma/schema.prisma",
    "db:seed": "node -e \"require('./dist/scripts/seed.js')\""
  },
  "dependencies": {
    "@neon/config": "*",
    "@neon/database": "*",
    "@neon/shared": "*",
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/s3-request-presigner": "^3.470.0",
    "argon2": "^0.31.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "livekit-server-sdk": "^2.0.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.7",
    "otplib": "^12.0.1",
    "socket.io": "^4.7.2",
    "@socket.io/redis-adapter": "^8.2.1",
    "uuid": "^9.0.1",
    "web-push": "^3.6.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/web-push": "^3.6.3",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
